@model X.PagedList.IPagedList<Projeto_DOS.Models.Codcurso>
@using X.PagedList.Mvc.Core;

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="./css/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Content/bootstrap/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" />
    <title>Disciplina</title>
</head>
<body>
    @{
        Layout = "_Layout";
    }
    <div class="container-fluid">
        @using (Html.BeginForm("Index", "Codcursoes", FormMethod.Get))
        {
            <div class="row mb-1 mt-1">
                <div class="col-sm-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisar Aluno" name="SearchString" autocomplete="off" />
                        <input class="btn btn-dark ml-1" type="submit" value="Pesquisar" />
                    </div>
                </div>
            </div>
        }
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="text-center bg-info p-0">
                    <td>Código do Curso</td>
                    <td>Turma</td>
                    <td>Lista</td>
                    <td>Data Movimetação</td>
                    <td>Disciplina</td>
                    <td>Susb</td>
                    <td>Professor</td>
                    <td>Código Disciplina</td>
                    <td>Ações</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.CODCURSO)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.TURMA)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.LISTA)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.DATAMOV)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.DISCIPLINA)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.SUBDIS)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.PROFESSOR)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.CODDIS)
                        </td>
                        <td class="p-sm-0">
                            <a asp-action="Edit" asp-route-id="@item.ID">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.ID">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div> 
        <div class="container-fluid">
            <div class="float-right">
                <strong>Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</strong>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </div>
        </div>
    @*<script src="~/js/site.js"></script>*@
</body>
</html>
