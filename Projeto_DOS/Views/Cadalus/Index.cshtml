@model X.PagedList.IPagedList<Projeto_DOS.Models.Cadalu>
@using X.PagedList.Mvc.Core;


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="./css/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Content/bootstrap/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" />
    <title>Lista de Alunos</title>
</head>
<body>
    @{
        Layout = "_Layout";
    }
    <div class="container-fluid">
        @using (Html.BeginForm("Index", "Cadalus", FormMethod.Get))
        {
            <div class="row mt-1 mb-1">
                <div class="col-sm-3">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Pesquisar Aluno" name="SearchString" />
                        <input class="btn btn-dark ml-1" type="submit" value="Pesquisar" />
                    </div>
                </div>
            </div>
        }
        <table class="table table-bordered table-hover table-responsive-sm">
            <thead>
                <tr class="text-center bg-info">
                    <th>
                        Ficha
                    </th>
                    <th>
                        CPF
                    </th>
                    <th>
                        Código Curso
                    </th>
                    @*<th>
                            Turma
                        </th>*@
                    <th>
                        Código Aluno
                    </th>
                    <th>
                        Nome
                    </th>
                    @*<th>
                            Apelido
                        </th>*@
                    <th>
                        Forma de Pagamento
                    </th>
                    <th>
                        Dia
                    </th>
                    @*<th>
                            Curri
                        </th>
                        <th>
                            Certi
                        </th>
                        <th>
                            Histo
                        </th>
                        <th>
                            CIC
                        </th>
                        <th>
                            RG
                        </th>
                        <th>
                            Crea
                        </th>
                        <th>
                            Contrato
                        </th>
                        <th>
                            Foto
                        </th>
                        <th>
                            EmDia
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Lista
                        </th>
                        <th>
                            Carta
                        </th>
                        <th>
                            DataInc
                        </th>
                        <th>
                            Status1
                        </th>*@
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="p-sm-0">
                            @Html.DisplayFor(modelItem => item.NFicha)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.NoCIC)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.CodCuR)
                        </td>
                        @*<td class="p-0 m-0">
                                @Html.DisplayFor(modelItem => item.Turma)
                            </td>*@
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.CodAlu)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        @*<td class="p-0 m-0">
                                @Html.DisplayFor(modelItem => item.Apelido)
                            </td>*@
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.Fpag)
                        </td>
                        <td class="p-0 m-0">
                            @Html.DisplayFor(modelItem => item.Dia)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Curri)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Certi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Histo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CIC)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Crea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contrato)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Foto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmDia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Lista)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataInc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status1)
                            </td>*@
                        <td class="p-sm-0">
                            <a asp-action="DTEditar" asp-route-id="@item.ID">Editar</a>
                            <a asp-action="DTDetalhes" asp-route-id="@item.ID">Detalhes</a>
                            <a asp-action="DTExcluir" asp-route-id="@item.ID">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="container-fluid">
        <div class="float-right">
            <strong>Página: @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount</strong>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
        </div>
    </div>
</body>
</html>
